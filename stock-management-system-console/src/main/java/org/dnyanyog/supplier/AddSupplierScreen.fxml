<Pane prefHeight="800" prefWidth="1200" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dnyanyog.supplier.AddSupplierScreenController">
   <children>
   
       <!-- Header -->
       <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#9fd3ed" height="80" stroke="BLACK" width="1200" />
       <Label layoutX="230.0" layoutY="14.0" prefHeight="53.0" prefWidth="293.0" text="Add Supplier">
           <font>
               <Font name="System Bold" size="36.0" />
           </font>
       </Label>
   
       <!-- Left Menu -->
       <VBox layoutX="20" layoutY="100" spacing="10">
      <children>
              <Button fx:id="DashBoard" onAction="#DashBoardButton" prefWidth="150" text="Dashboard" />
              <Button fx:id="Product" onAction="#ProductButton" prefWidth="150" text="Product" />
              <Button fx:id="Orders" onAction="#OrdersButton" prefWidth="150" text="Orders" />
              <Button fx:id="Users" onAction="#UsersButton" prefWidth="150" text="Users" />
              <Button fx:id="Suppliers" onAction="#SuppliersButton" prefWidth="150" style="-fx-background-color: #9fd3ed; -fx-text-fill: white;" text="Suppliers" />
              <Button fx:id="Logout" onAction="#LogoutButton" prefWidth="150" text="Logout" />
      </children>
       </VBox>
   
       <!-- Form Area -->
       <VBox layoutX="250" layoutY="150" prefWidth="600" spacing="20">
      <children>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Supplier Name:" />
                     <TextField fx:id="supplierName" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Contact:" />
                     <TextField fx:id="contact" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Address:" />
                     <TextField fx:id="address" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox alignment="CENTER_RIGHT" spacing="20">
         <children>
                     <Button fx:id="Cancel" onAction="#CancelButton" prefWidth="100" style="-fx-border-color: #dd1818; -fx-text-fill: #dd1818;" text="Cancel" />
                     <Button fx:id="Save" onAction="#SaveButton" prefWidth="100" style="-fx-background-color: #33b535; -fx-text-fill: white;" text="Save" />
         </children>
              </HBox>
      </children>
   
       </VBox>
      <ImageView fitHeight="76.0" fitWidth="103.0" layoutX="44.0" layoutY="2.0">
         <image>
            <Image url="@../../../../../../../../../Users/Pratiksha/Downloads/StockManagement.jpg" />
         </image>
      </ImageView>
      <Label layoutX="1006.0" layoutY="26.0" prefHeight="30.0" prefWidth="180.0" text="Pratiksha(Admin)">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <ImageView fitHeight="47.0" fitWidth="52.0" layoutX="949.0" layoutY="17.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../../../../../Users/Pratiksha/Downloads/p.png" />
         </image>
      </ImageView>
   </children>

</Pane>
