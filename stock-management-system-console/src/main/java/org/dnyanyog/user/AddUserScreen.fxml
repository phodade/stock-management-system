<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<Pane prefHeight="800" prefWidth="1200" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dnyanyog.user.AddUserScreenController">
   <children>
   
       <!-- Header -->
       <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#9fd3ed" height="80" stroke="BLACK" width="1200" />
       <Label layoutX="220.0" layoutY="14.0" prefHeight="53.0" prefWidth="243.0" text="Add User" textFill="#221f1f">
           <font>
               <Font name="System Bold" size="36.0" />
           </font>
       </Label>
   
       <!-- Left Menu -->
       <VBox layoutX="20" layoutY="100" spacing="10">
      <children>
              <Button fx:id="DashBoard" onAction="#DashBoardButton" prefWidth="150" text="Dashboard" />
              <Button fx:id="Users" onAction="#UserButton" prefWidth="150" style="-fx-background-color: #9fd3ed; -fx-text-fill: white;" text="Users" />
              <Button fx:id="Product" onAction="#ProductButton" prefWidth="150" text="Product" />
              <Button fx:id="Order" onAction="#OrderButton" prefWidth="150" text="Orders" />
              <Button fx:id="Supplier" onAction="#SuppilerButton" prefWidth="150" text="Suppliers" />
              <Button fx:id="Logout" onAction="#LogoutButton" prefWidth="150" text="Logout" />
      </children>
       </VBox>
   
       <!-- Form Area -->
       <VBox layoutX="250" layoutY="150" prefWidth="600" spacing="20">
      <children>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Username:" />
                     <TextField fx:id="patient_name_english" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Email:" />
                     <TextField fx:id="email" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Mobile Number:" />
                     <TextField fx:id="mobileNumber" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Password:" />
                     <TextField fx:id="password" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Confirm Password:" />
                     <TextField fx:id="confirm" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Role:" />
                     <TextField fx:id="role" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox alignment="CENTER_RIGHT" spacing="20">
         <children>
                     <Button fx:id="Cancle" onAction="#CancleButton" prefWidth="100" style="-fx-border-color: #dd1818; -fx-text-fill: #dd1818;" text="Cancel" />
                     <Button fx:id="Save" onAction="#SaveButton" prefWidth="100" style="-fx-background-color: #33b535; -fx-text-fill: white;" text="Save" />
         </children>
              </HBox>
      </children>
   
       </VBox>
      <ImageView fitHeight="76.0" fitWidth="103.0" layoutX="50.0" layoutY="2.0">
         <image>
            <Image url="@../../../../../../../../../Users/Pratiksha/Downloads/StockManagement.jpg" />
         </image>
      </ImageView>
      <Label layoutX="999.0" layoutY="26.0" prefHeight="30.0" prefWidth="180.0" text="Pratiksha(Admin)">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <ImageView fitHeight="47.0" fitWidth="52.0" layoutX="946.0" layoutY="17.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../../../../../Users/Pratiksha/Downloads/p.png" />
         </image>
      </ImageView>
   </children>

</Pane>
