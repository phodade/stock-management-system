<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<Pane prefHeight="800" prefWidth="1200" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dnyanyog.product.AddProductScreenController">
   <children>
   
       <!-- Header -->
       <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#9fd3ed" height="80" stroke="BLACK" width="1200" />
       <Label layoutX="250.0" layoutY="8.0" prefHeight="70.0" prefWidth="325.0" text="Add Product">
           <font>
               <Font name="System Bold" size="36.0" />
           </font>
       </Label>
   
       <!-- Left Menu -->
       <VBox layoutX="20" layoutY="100" spacing="10">
      <children>
              <Button fx:id="dashBoardBtn" onAction="#handleDashboard" prefWidth="150" text="Dashboard" />
              <Button fx:id="productBtn" onAction="#handleProduct" prefWidth="150" style="-fx-background-color: #9fd3ed; -fx-text-fill: white;" text="Product" />
              <Button fx:id="ordersBtn" onAction="#handleOrders" prefWidth="150" text="Orders" />
              <Button fx:id="usersBtn" onAction="#handleUsers" prefWidth="150" text="Users" />
              <Button fx:id="suppliersBtn" onAction="#handleSuppliers" prefWidth="150" text="Suppliers" />
              <Button fx:id="inventoryBtn" onAction="#handleInventory" prefWidth="150" text="Inventory" />
              <Button fx:id="logoutBtn" onAction="#handleLogout" prefWidth="150" text="Logout" />
      </children>
       </VBox>
   
       <!-- Form Area -->
       <VBox layoutX="250" layoutY="150" prefWidth="700" spacing="20">
      <children>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Product ID:" />
                     <TextField fx:id="txtProductId" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Product Name:" />
                     <TextField fx:id="txtProductName" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Description:" />
                     <TextArea fx:id="txtDescription" prefRowCount="3" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Price:" />
                     <TextField fx:id="txtPrice" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Quantity:" />
                     <TextField fx:id="txtQuantity" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="150" text="Category:" />
                     <TextField fx:id="txtCategory" prefWidth="400" />
         </children>
              </HBox>
      
              <HBox alignment="CENTER_RIGHT" spacing="20">
         <children>
                     <Button fx:id="cancelBtn" onAction="#handleCancel" prefWidth="100" style="-fx-border-color: #dd1818; -fx-text-fill: #dd1818;" text="Cancel" />
                     <Button fx:id="saveBtn" onAction="#handleSave" prefWidth="100" style="-fx-background-color: #33b535; -fx-text-fill: white;" text="Save" />
         </children>
              </HBox>
      </children>
   
       </VBox>
      <ImageView fitHeight="76.0" fitWidth="103.0" layoutX="34.0" layoutY="2.0">
         <image>
            <Image url="@../../../../../../../../../Users/Pratiksha/Downloads/StockManagement.jpg" />
         </image>
      </ImageView>
      <Label layoutX="983.0" layoutY="28.0" prefHeight="30.0" prefWidth="180.0" text="Pratiksha(Admin)">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <ImageView fitHeight="47.0" fitWidth="52.0" layoutX="919.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../../../../../Users/Pratiksha/Downloads/p.png" />
         </image>
      </ImageView>
   </children>

</Pane>
