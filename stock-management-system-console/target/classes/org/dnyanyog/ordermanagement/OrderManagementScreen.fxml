<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<Pane prefHeight="911.0" prefWidth="1256.0"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.dnyanyog.ordermanagement.OrderManagementScreenController">

    <children>
        <!-- Header background -->
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#9fd3ed" height="90.0" stroke="BLACK" strokeType="INSIDE" width="1256.0" />

        <!-- Logo -->
        <ImageView fitHeight="76.0" fitWidth="103.0" layoutX="86.0" layoutY="7.0">
            <image>
                <Image url="@StockManagement.jpg" />
            </image>
        </ImageView>

        <!-- User Info -->
        <Label layoutX="1052.0" layoutY="33.0" prefHeight="30.0" prefWidth="180.0" text="Pratiksha(Admin)">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <ImageView fitHeight="47.0" fitWidth="52.0" layoutX="983.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@p.png" />
            </image>
        </ImageView>

        <!-- Navigation buttons -->
        <Button fx:id="Dashboard" layoutX="51.0" layoutY="152.0" mnemonicParsing="false" onAction="#DashboardButton" prefHeight="56.0" prefWidth="210.0" style="-fx-border-color: #ffffff;" text="Dashboard">
            <font><Font name="System Bold" size="18.0" /></font>
        </Button>

        <Button fx:id="Product" layoutX="51.0" layoutY="236.0" mnemonicParsing="false" onAction="#ProductButton" prefHeight="56.0" prefWidth="210.0" style="-fx-border-color: #ffffff;" text="Products">
            <font><Font name="System Bold" size="18.0" /></font>
        </Button>

        <Button fx:id="Orders" layoutX="51.0" layoutY="320.0" mnemonicParsing="false" onAction="#OrdersButton" prefHeight="56.0" prefWidth="210.0" style="-fx-background-color: #9fd3ed;" text="Orders" textFill="WHITE">
            <font><Font name="System Bold" size="18.0" /></font>
        </Button>

        <Button fx:id="Users" layoutX="51.0" layoutY="404.0" mnemonicParsing="false" onAction="#UsersButton" prefHeight="56.0" prefWidth="210.0" style="-fx-border-color: #ffffff;" text="Users">
            <font><Font name="System Bold" size="18.0" /></font>
        </Button>

        <Button fx:id="Suppliers" layoutX="51.0" layoutY="488.0" mnemonicParsing="false" onAction="#SuppliersButton" prefHeight="56.0" prefWidth="210.0" style="-fx-border-color: #ffffff;" text="Suppliers">
            <font><Font name="System Bold" size="18.0" /></font>
        </Button>

        <Button fx:id="Inventory" layoutX="51.0" layoutY="572.0" mnemonicParsing="false" onAction="#InventoryButton" prefHeight="56.0" prefWidth="210.0" style="-fx-border-color: #ffffff;" text="Inventory">
            <font><Font name="System Bold" size="18.0" /></font>
        </Button>

        <Button fx:id="Logout" layoutX="51.0" layoutY="838.0" mnemonicParsing="false" onAction="#LogoutButton" prefHeight="40.0" prefWidth="125.0" text="Logout" textFill="#093607" />

        <!-- Main content area -->
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="792.0" layoutX="296.0" layoutY="108.0" stroke="BLACK" strokeType="INSIDE" width="946.0" />

        <!-- Title -->
        <Label layoutX="315.0" layoutY="-3.0" prefHeight="97.0" prefWidth="414.0" text="Order Management">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>

        <!-- Order operation buttons -->
        <Button fx:id="AddOrder" layoutX="418.0" layoutY="243.0" mnemonicParsing="false" onAction="#AddOrderButton" prefHeight="56.0" prefWidth="279.0" text="Add Order" textFill="BLACK">
            <font><Font name="System Bold" size="18.0" /></font>
        </Button>

        <Button fx:id="EditOrder" layoutX="418.0" layoutY="330.0" mnemonicParsing="false" onAction="#EditOrderButton" prefHeight="56.0" prefWidth="279.0" text="Edit Order" textFill="BLACK">
            <font><Font name="System Bold" size="18.0" /></font>
        </Button>

        <Button fx:id="SearchOrder" layoutX="418.0" layoutY="415.0" mnemonicParsing="false" onAction="#SearchOrderButton" prefHeight="56.0" prefWidth="279.0" text="Search Order" textFill="BLACK">
            <font><Font name="System Bold" size="18.0" /></font>
        </Button>

        <Button fx:id="DeleteOrder" layoutX="418.0" layoutY="500.0" mnemonicParsing="false" onAction="#DeleteOrderButton" prefHeight="56.0" prefWidth="279.0" text="Delete Order" textFill="BLACK">
            <font><Font name="System Bold" size="18.0" /></font>
        </Button>
    </children>
</Pane>
